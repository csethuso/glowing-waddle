<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TransactionHistoryController"
      alignment="CENTER"
      spacing="10"
      style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <Label fx:id="customerNameLabel"
           text="Transaction History"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>

    <TableView fx:id="transactionTable" prefWidth="600" prefHeight="400">
        <columns>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
        </columns>
    </TableView>

    <Button text="Close"
            onAction="#onClose"
            style="-fx-background-color: #dc3545; -fx-text-fill: white;"
            visible="false"/>
</VBox>
